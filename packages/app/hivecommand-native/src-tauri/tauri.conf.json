{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "withGlobalTauri": true,
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "HiveCommand",
    "version": "0.1.3"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "scope": ["**"],
        "writeFile": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/sidecar",
            "sidecar": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["binaries/sidecar"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico"
      ],
      "identifier": "io.hexhive.command",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/balbatross/77e9107de0e9ef84260b6094089c7c97/raw/14b6c44eecbf392584b7fb8538c217640235e5eb/update.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU0ODJCQkZFQUY2MjJDMEEKUldRS0xHS3YvcnVDNUdlSmtzckxPVWxCQVF1Zk1Ec1hwNSthUnNTOUZRWTdrWXhMQUlPWWl1dlkK"
    },
    "windows": [
      {
        "fullscreen": true,
        "height": 600,
        "resizable": true,
        "title": "HiveCommand",
        "width": 800
      }
    ]
  }
}

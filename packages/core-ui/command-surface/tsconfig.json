{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "composite": true, 
    "target": "ESNext", 
    "jsx": "react-jsx", 
    "module": "ESNext", 
    "rootDir": "./src", 
    "moduleResolution": "node", 
    "allowJs": true, 
    "declaration": true, 
    "outDir": "./dist", 
    "downlevelIteration": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "noImplicitAny": false, 
    "skipLibCheck": true 
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "jest.config.js",
    "dist/",
    "**/**.test.ts",
    "**/**.test.tsx",
    "node_modules/"
  ],
  "references": [
    {
      "path": "../command-canvas-nodes"
    },
    {
      "path": "../command-remote-components"
    },
    {
      "path": "../../core/command-scripting"
    },
    {
      "path": "../../types/interface-types"
    }
  ]
}